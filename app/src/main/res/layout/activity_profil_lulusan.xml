<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilLulusan">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        app:layout_scrollFlags="enterAlways">

        <TextView
            android:id="@+id/toolbar2_text"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:gravity="center"
            android:text="Profil Lulusan"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:id="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@id/toolbar2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="1dp">

            <Button
                android:id="@+id/judulProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#806CA4"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="PROFIL LULUSAN"
                android:textAlignment="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/profil1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/profil1"
                android:justificationMode="inter_word"
                app:layout_constraintBottom_toTopOf="@id/profil2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/judulProfil" />

            <TextView
                android:id="@+id/profil2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp"
                android:lineSpacingExtra="8dp"
                android:text="@string/profil2"
                android:justificationMode="inter_word"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profil1"
                app:layout_constraintBottom_toTopOf="@id/judulKompetensi"/>

            <Button
                android:id="@+id/judulKompetensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#806CA4"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="KOMPETENSI"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/profil2"
                app:layout_constraintBottom_toTopOf="@id/kompetensi1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/kompetensi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/kompetensi1"
                android:justificationMode="inter_word"
                app:layout_constraintBottom_toBottomOf="@id/kompetensi2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/judulKompetensi" />

            <TextView
                android:id="@+id/kompetensi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp"
                android:lineSpacingExtra="8dp"
                android:text="@string/kompetensi2"
                android:justificationMode="inter_word"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/kompetensi1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>